@model IEnumerable<GestCTI.Models.Campaign>

@{
    ViewBag.Title = "Index";
}

@section breadcrumb{
    <li>@Html.ActionLink(@Resources.Login.Home, "Index", "Admin")</li>
    <li class="active">@Resources.Admin.Campaigns</li>
}

<div class="page-title">
    <h2><span class="fa fa-arrow-circle-o-left"></span> @Resources.Admin.Campaigns</h2>
</div>


<div class="panel panel-default tabs">

    <div class="panel-body tab-content">
        <div class="tab-pane active" id="tab-first">
            <h3 style="padding-bottom:15px">
                @Html.ActionLink(Resources.Admin.ActionCreateNew, "Create", null, new { @class = "fa fa-plus" })
            </h3>
            <table class="table Mydatatable" id="tabla-index">
                <thead>
                    <tr>
                        <th>
                            @Resources.Admin.Code
                        </th>
                        <th>
                            @Resources.Admin.Name
                        </th>
                        <th>
                            @Resources.Admin.Type
                        </th>
                        <th>
                            @Resources.Admin.Company
                        </th>
                        <th>
                            @Resources.Admin.UrlScript
                        </th>
                        <th>
                            @Resources.Admin.Active
                        </th>
                        <th>
                            @Resources.Admin.Options
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Code)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CampaignType.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Company.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UrlScript)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Active)
                            </td>
                            <td>
                                @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "btn btn-success btn-sm fa fa-edit info", title = Resources.Admin.ActionEdit })

                                @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm fa fa-eye info", title = Resources.Admin.ActionDetails })

                                @if (item.Active)
                                {
                                    <a class="btn btn-danger btn-sm info fa fa-stop mb-control" data-box="#Modal_@item.Id" title="@Resources.Admin.Stop"></a>
                                    @Html.Partial("Notifications", null, new ViewDataDictionary { { "IdItem", item.Id }, { "Icon", "fa fa-stop" }, { "Title", Resources.Admin.Stop + " " + Resources.Admin.Campaign }, { "Action", "Stop" }, { "Controller", "Campaigns" }, { "Menssage", Resources.Admin.StopCampaign + " " + item.Name + "?" } })
                                }
                                else
                                {
                                    <a class="btn btn-warning btn-sm info fa fa-play mb-control" data-box="#Modal_@item.Id" title="@Resources.Admin.Start"></a>
                                    @Html.Partial("Notifications", null, new ViewDataDictionary { { "IdItem", item.Id }, { "Icon", "fa fa-play" }, { "Title", Resources.Admin.Start + " " + Resources.Admin.Campaign }, { "Action", "Start" }, { "Controller", "Campaigns" }, { "Menssage", Resources.Admin.StartCampaign + " " + item.Name + "?" } })
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section scripts{

    <script type='text/javascript' src="~/assets/js/plugins/icheck/icheck.min.js"></script>
    <script src="~/assets/js/plugins/datatables/dataTablesLang.js"></script>
}