@model GestCTI.Models.DispositionCampaigns

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section breadcrumb{
    <li>@Html.ActionLink(@Resources.Login.Home, "Index", "Admin")</li>
    <li>@Html.ActionLink(@Resources.Admin.Campaigns, "Index", "Campaigns")</li>
    <li>@Html.ActionLink(Resources.Admin.DispositionCampaigns, "Index")</li>
    <li class="active">@Resources.Admin.ActionEdit</li>
}

<div class="page-title">
    <h2><span class="fa fa-arrow-circle-o-left"></span> @Resources.Admin.ActionEdit</h2>
</div>

<div class="panel panel-default tabs">
    <ul class="nav nav-tabs">
        <li class="active"><a href="#tab1" data-toggle="tab">@Resources.Admin.DispositionCampaign</a></li>
    </ul>
    <div class="panel-body tab-content">
        <div class="col-md-6 col-lg-offset-3">
            <div class="tab-pane active" id="tab1">
                @using (Html.BeginForm("Edit", "DispositionCampaigns", FormMethod.Post, new { id = "myform" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <label class="control-label col-md-3" for="IdDisposition" style="font-size:small; font-weight: bold">@Resources.Admin.Disposition</label>
                            <div class="col-md-9">
                                @*@Html.DropDownList("IdDisposition", null, htmlAttributes: new { @class = "form-control select", required = "required", disabled="disabled" })*@
                                <label class="control-label" style="font-size:small">@Model.IdDisposition</label>
                                @Html.ValidationMessageFor(model => model.IdDisposition, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3" for="IdCampaign" style="font-size:small; font-weight: bold">@Resources.Admin.Campaign</label>
                            <div class="col-md-9">
                                @*@Html.DropDownList("IdCampaign", null, htmlAttributes: new { @class = "form-control select", style = "font-size:small", required = "required", disabled = "disabled" })*@
                                <label class="control-label" style="font-size:small">@Model.IdCampaign</label>
                                @Html.ValidationMessageFor(model => model.IdCampaign, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3" for="Description" style="font-size:small; font-weight: bold">@Resources.Admin.Description</label>
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", style = "font-size:small" } })
                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3" for="Active" style="font-size:small; font-weight: bold">@Resources.Admin.Active</label>
                            <div class="col-md-9" style="padding-top: 5px">
                                @Html.CheckBoxFor(model => model.Active, new { @class = "icheckbox", @checked = "checked" })
                                @Html.ValidationMessageFor(model => model.Active, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-3 col-md-9 ">
                                <input type="submit" value=@Resources.Admin.Save class="btn btn-success btn-block" style="font-size:medium" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")

    <script type='text/javascript' src='~/assets/js/plugins/icheck/icheck.min.js'></script>
    <script type="text/javascript" src="~/assets/js/plugins/mcustomscrollbar/jquery.mCustomScrollbar.min.js"></script>

    <script type='text/javascript' src='~/assets/js/plugins/bootstrap/bootstrap-datepicker.js'></script>
    <script type='text/javascript' src='~/assets/js/plugins/bootstrap/bootstrap-select.js'></script>
    <script type='text/javascript' src='~/assets/js/plugins/jquery-validation/jquery.validate.js'></script>
    <script type='text/javascript' src='~/assets/js/plugins/maskedinput/jquery.maskedinput.min.js'></script>

    <script type="text/javascript">
        $('#myform').validate({});

        var msj = '@TempData["MsjError"]';
        if (msj != '')
            errorNoty(msj);
    </script>
}