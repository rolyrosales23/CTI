    <script>
        var lang = "";

        if (navigator.languages == undefined) {
            if (navigator.language == undefined) {
                // Internet Explorer Compatibility
                lang = navigator.userLanguage.slice(0, 2);
            } else {
                // Old navigator compatibility
                lang = navigator.language.slice(0, 2);
            }
        } else {
            lang = navigator.languages[0].slice(0, 2);
        }

        if (lang.includes("es")) {
            $.getScript('../../assets/js/plugins/jquery-validation/localization/messages_es.js', function () { });
        }
        else if (lang.includes("fr")) {
            $.getScript('../../assets/js/plugins/jquery-validation/localization/messages_fr.js', function () { });
        }
    </script>

    <!-- RESALTAR EL ELEMENTO CORRESPONDIENTE DEL MAIN MENU -->
    <script type="text/javascript">
        var controller = "@ViewContext.RouteData.Values["controller"].ToString().ToLower()";
        var action = "@ViewContext.RouteData.Values["action"].ToString().ToLower()";

        var element = $('li[action="' + action + '"][controller="' + controller + '"]');
        while (element.length) {
            if (element[0].localName == 'li')
                element.addClass('active');

            if (element.attr('x-navigation'))
                break;

            element = element.parent();
        }
    </script>

