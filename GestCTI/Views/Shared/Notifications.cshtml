@if (ViewBag.Icon == null)
{
    ViewBag.Icon = "fa fa-trash-o";
}
@if (ViewBag.Title == null)
{
    ViewBag.Title = Resources.Admin.DeleteRecord;
}

<div class="message-box animated fadeIn" data-sound="alert" id="Modal_@ViewBag.IdItem">
    <div class="mb-container">
        <div class="mb-middle">
            <div class="mb-title"><span class="@ViewBag.Icon"></span> @ViewBag.Title</div>
            <div class="mb-content">
                @ViewBag.Menssage
            </div>
            <div class="mb-footer">
                <div class="pull-right">
                    @using Microsoft.AspNet.Identity
                    @using (Html.BeginForm((string)ViewBag.Action, (string)ViewBag.Controller, new { id = ViewBag.IdItem }, FormMethod.Post, new { @class = "navbar-right" }))
                    {
                        @Html.AntiForgeryToken()

                        <input class="btn btn-info btn-lg" type="submit" value="@Resources.Login.Yes" />
                        @*@Html.ActionLink(@Resources.Login.Yes, "Delete", new { id = ViewBag.IdItem }, new { @class = "btn btn-success btn-lg", title = Resources.Admin.ActionDelete })*@
                        <button class="btn btn-default btn-lg mb-control-close">No</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>