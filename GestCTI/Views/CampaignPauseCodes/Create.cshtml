@model GestCTI.Models.CampaignPauseCodes

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section breadcrumb{
    <li>@Html.ActionLink(@Resources.Login.Home, "Index", "Admin")</li>
    <li>@Html.ActionLink(@Resources.Admin.Campaigns, "Index", "Campaigns")</li>
    <li>@Html.ActionLink(Resources.Admin.PauseCodeCampaigns, "Index")</li>
    <li class="active">@Resources.Admin.ActionCreateNew</li>
}

<div class="page-title">
    <h2><span class="fa fa-arrow-circle-o-left"></span> @Resources.Admin.ActionCreateNew @Resources.Admin.PauseCodeCampaign</h2>
</div>

<div class="panel panel-default tabs">
    <ul class="nav nav-tabs">
        <li class="active"><a href="#tab1" data-toggle="tab">@Resources.Admin.PauseCodeCampaign</a></li>
    </ul>
    <div class="panel-body tab-content">
        <div class="col-md-6 col-lg-offset-3">
            <div class="tab-pane active" id="tab1">
                @using (Html.BeginForm("Create", "CampaignPauseCodes", FormMethod.Post, new { id = "myform" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <label class="control-label col-md-3" for="IdCampaign" style="font-size:small; font-weight: bold">@Resources.Admin.Campaign</label>
                            <div class="col-md-9">
                                @Html.DropDownList("IdCampaign", null, htmlAttributes: new { @class = "form-control select", style = "font-size:small", required = "required" })
                                @Html.ValidationMessageFor(model => model.IdCampaign, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3" for="IdPauseCode" style="font-size:small; font-weight: bold">@Resources.Admin.PauseCode</label>
                            <div class="col-md-9">
                                @Html.DropDownList("IdPauseCode", null, htmlAttributes: new { @class = "form-control select", style = "font-size:small", required = "required" })
                                @Html.ValidationMessageFor(model => model.IdPauseCode, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3" for="MaxDuration" style="font-size:small; font-weight: bold">@Resources.Admin.MaxDuration</label>
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.MaxDuration, new { htmlAttributes = new { @class = "form-control", style = "font-size:small", required = "required" } })
                                <span class="help-block">@Resources.Admin.TimeSec</span>
                                @Html.ValidationMessageFor(model => model.MaxDuration, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3" for="MaxDailyEvents" style="font-size:small; font-weight: bold">@Resources.Admin.MaxDailyEvents</label>
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.MaxDailyEvents, new { htmlAttributes = new { @class = "form-control", style = "font-size:small", required = "required" } })
                                @Html.ValidationMessageFor(model => model.MaxDailyEvents, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3" for="AutoReady" style="font-size:small; font-weight: bold">@Resources.Admin.AutoReady</label>
                            <div class="col-md-9" style="padding-top: 5px">
                                @Html.CheckBoxFor(model => model.Active, new { @class = "icheckbox", @checked = "checked" })
                                @Html.ValidationMessageFor(model => model.AutoReady, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3" for="Active" style="font-size:small; font-weight: bold">@Resources.Admin.Active</label>
                            <div class="col-md-9" style="padding-top: 5px">
                                @Html.CheckBoxFor(model => model.Active, new { @class = "icheckbox", @checked = "checked" })
                                @Html.ValidationMessageFor(model => model.Active, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-3 col-md-9 ">
                                <input type="submit" value=@Resources.Admin.Save class="btn btn-success btn-block" style = "font-size:medium" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")

    <script type='text/javascript' src='~/assets/js/plugins/icheck/icheck.min.js'></script>
    <script type="text/javascript" src="~/assets/js/plugins/mcustomscrollbar/jquery.mCustomScrollbar.min.js"></script>

    <script type='text/javascript' src='~/assets/js/plugins/bootstrap/bootstrap-datepicker.js'></script>
    <script type='text/javascript' src='~/assets/js/plugins/bootstrap/bootstrap-select.js'></script>
    <script type='text/javascript' src='~/assets/js/plugins/jquery-validation/jquery.validate.js'></script>
    <script type='text/javascript' src='~/assets/js/plugins/maskedinput/jquery.maskedinput.min.js'></script>

    <script type="text/javascript">
        $('#myform').validate({});
    </script>
}