<div id="modal-Campaigns" class="modal fade" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content" style="width: 360px;">
            <div class="modal-header">
                <h3>Seleccione una campaña para la llamada</h3>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <form id="myform">
                            <div class="form-horizontal">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    <select class="form-control" id="SelCampaigns" style="height:45px" required></select>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3" for="Active">No es de campaña</label>
                                    <div class="col-md-9" style="padding-top: 5px">
                                        <input type="checkbox" class="icheckbox" id="ChbCampaign"/>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-sm-offset-9 ">
                                        <input type="submit" value=@Resources.Admin.Save class="btn btn-success" id="BtnCampaignCall" />
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
        $('#myform').validate({});
</script>
