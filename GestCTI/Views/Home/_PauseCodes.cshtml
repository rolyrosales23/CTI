<div id="modal-PauseCodes" class="modal fade" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content" style="width: 360px;">
            <div class="modal-header">
                <h3>Seleccione un Pause Code</h3>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <form id="formPauseCodes">
                            <div class="form-horizontal">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    <select class="form-control" id="SelPauseCodes" style="height:45px" required></select>
                                </div>

                                <div class="form-group">
                                    <div class="col-sm-offset-9 ">
                                        <input type="submit" value=@Resources.Admin.Save class="btn btn-success" id="SendPauseCode" />
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $('#formPauseCodes').validate({});
</script>
