@{
    ViewBag.Title = "Home Page";
}

@section css{
    <link href="~/assets/Icons/style.css" rel="stylesheet" />
    <style type="text/css">
        .button-spacer {
            margin-right: 8px;
            min-width: 66px;
            font-weight: bold;
            border-radius: 7px;
        }
        .icono-grande {
            font-size: 20px !important
        }
        .btn-redondo {
            border-radius: 7px;
            font-size: 14px;
            width: 100%;
            background-color: #3b5045;
        }
        #options .row {
            margin-bottom: 10px
        }
    </style>
}

<!-- PAGE TITLE
<div class="page-title">
    <h2><span class="fa fa-columns"></span> Agent Work Page</h2>
</div>
 END PAGE TITLE -->

<div class="row">
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-body" id="options">
                <div class="row">
                    <div class="col-md-6">
                        <button class="btn btn-success btn-redondo" id="ReadyToWork">
                            <i class="fa fa-check icono-grande"></i><br/>
                            Ready
                        </button>
                    </div>

                    <div class="col-md-6">
                        <button class="btn btn-success btn-redondo">
                            <i class="fa fa-pause icono-grande"></i><br/>
                            Pause
                        </button>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <button class="btn btn-success btn-redondo" disabled="disabled" id="acceptCallRequest">
                            <i class="fa icon-phone-call icono-grande"></i><br/>
                            Answer
                        </button>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <button class="btn btn-success btn-redondo">
                            <i class="fa fa-th icono-grande"></i><br/>
                            Keypad
                        </button>
                    </div>

                    <div class="col-md-4">
                        <button class="btn btn-success btn-redondo">
                            <i class="fa icon-phone_missed icono-grande"></i><br/>
                            Transfer
                        </button>
                    </div>

                    <div class="col-md-4">
                        <button class="btn btn-success btn-redondo">
                            <i class="fa icon-phone_paused icono-grande"></i><br/>
                            Hold
                        </button>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <button class="btn btn-success btn-redondo">
                            <i class="fa icon-phone-forwarded icono-grande"></i><br/>
                            Redial
                        </button>
                    </div>

                    <div class="col-md-4">
                        <button class="btn btn-success btn-redondo">
                            <i class="fa fa-cloud-upload icono-grande"></i><br/>
                            Confer...
                        </button>
                    </div>

                    <div class="col-md-4">
                        <button class="btn btn-success btn-redondo">
                            <i class="fa icon-phone3 icono-grande"></i><br/>
                            <span class="line-height-1 smaller-75"> End Conf... </span>
                        </button>
                    </div>
                </div>
                        
                <div class="row">
                    <div class="col-md-12">
                        <button class="btn btn-success btn-redondo" id="hangoutCallRequest" disabled="disabled">
                            <i class="fa icon-call_end icono-grande"></i><br/>
                            Hang Up
                        </button>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-10 col-lg-offset-1">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="widget-main">
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-phone"></i><br />
                                </span>

                                <input class="form-control" type="text" />
                            </div>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-primary btn-lg button-spacer">
                                1
                            </button>
                            <button class="btn btn-primary btn-lg button-spacer">
                                2
                            </button>
                            <button class="btn btn-primary btn-lg button-spacer">
                                3
                            </button>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-primary btn-lg button-spacer">
                                4
                            </button>
                            <button class="btn btn-primary btn-lg button-spacer">
                                5
                            </button>
                            <button class="btn btn-primary btn-lg button-spacer">
                                6
                            </button>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-primary btn-lg button-spacer">
                                7
                            </button>
                            <button class="btn btn-primary btn-lg button-spacer">
                                8
                            </button>
                            <button class="btn btn-primary btn-lg button-spacer">
                                9
                            </button>
                        </div>
                        <div class="center">
                            <button class="btn btn-danger btn-lg button-spacer">
                                End
                            </button>
                            <button class="btn btn-primary btn-lg button-spacer">
                                0
                            </button>
                            <button class="btn btn-success btn-lg button-spacer">
                                Call
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="panel panel-default">
            <div class="panel-body" style="height: 650px">
            </div>
        </div>
    </div>
</div>