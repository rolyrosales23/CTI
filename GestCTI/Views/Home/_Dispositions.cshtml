<div id="modal-dispositions" class="modal fade" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-sm">
        <div class="modal-content" style="width: 360px;">
            <div class="modal-header">
                <h3>Seleccione la disposición de la llamada</h3>
            </div>

            <form id="formDispositions" class="form-horizontal validar">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <select class="form-control" id="SelDisposition" style="height:35px" required></select>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <div class="col-sm-offset-9">
                        <a href="#!" class="btn btn-success" id="SendCallDisposition">@Resources.Admin.Save</a>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>